{
	"name": "hametuha/anyway-feedback",
	"description": "WordPress plugin for series content.",
	"minimum-stability": "stable",
	"license": "GPL-3.0-or-later",
	"type": "wordpress-plugin",
	"scripts": {
		"lint": "phpcs --standard=phpcs.ruleset.xml $(find ./ -name '*.php')",
		"fix": "phpcbf --standard=phpcs.ruleset.xml $(find ./ -name '*.php')"
	},
	"authors": [
		{
			"name": "Hametuha INC",
			"email": "info@hametuha.co.jp"
		}
	],
	"repositories": [
		{
			"type": "composer",
			"url": "https://wpackagist.org"
		}
	],
	"require": {
		"php": ">=7.4"
	},
	"require-dev": {
		"johnpbloch/wordpress": "6.9",
		"wp-coding-standards/wpcs": "^3.0"

	},
	"autoload": {
		"psr-4": {
			"AFB\\": "app"
		}
	},
	"config": {
		"platform": {
			"php": "7.4"
		},
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true,
			"johnpbloch/wordpress-core-installer": true
		}
	},
	"extra": {
		"wordpress-install-dir": "wordpress",
		"installer-paths": {
			"vendor/plugins/{$name}/": [
				"type:wordpress-plugin"
			]
		}
	}
}
