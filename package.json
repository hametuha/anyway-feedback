{
	"name": "anyway-feedback",
	"main": ".wp-env.json",
	"scripts": {
		"start": "wp-env start",
		"update": "wp-env start --update",
		"stop": "wp-env stop",
		"cli": "wp-env run cli wp",
		"cli:test": "wp-env run tests-cli wp",
		"watch": "npm-watch",
		"package": "npm run build:css && npm run build:js && npm run copy:js && npm run dump",
		"build:css": "sass ./src/scss/:./assets/css/ --style=compressed && postcss ./assets/css/*.css --use autoprefixer --replace",
		"build:js": "grab-deps js src/js assets/js",
		"copy:js": "mkdir -p ./assets/vendor && cp ./node_modules/js-cookie/dist/js.cookie.min.js ./assets/vendor/",
		"dump": "grab-deps dump assets/js,assets/css",
		"lint": "npm run lint:js && npm run lint:css",
		"lint:js": "wp-scripts lint-js './src/js/**/*.js'",
		"lint:css": "wp-scripts lint-style './src/scss/**/*.scss'",
		"fix": "npm run fix:js && npm run fix:css",
		"fix:js": "wp-scripts lint-js --fix './src/js/**/*.js'",
		"fix:css": "wp-scripts lint-style --fix './src/scss/**/*.scss'",
		"prepare": "husky"
	},
	"author": "Hametuha INC.",
	"license": "LGPL-3.0-or-later",
	"devDependencies": {
		"@kunoichi/grab-deps": "^3.0.0",
		"@wordpress/env": "^10.0",
		"@wordpress/scripts": "^30",
		"autoprefixer": "^10.4.19",
		"husky": "^9.1.7",
		"js-cookie": "^3.0.5",
		"lint-staged": "^16.2.7",
		"npm-watch": "^0.11.0",
		"postcss": "^8.4.38",
		"postcss-cli": "^11.0.0",
		"sass": "^1.72.0"
	},
	"watch": {
		"build:js": {
			"extensions": "js",
			"patterns": [
				"src/js"
			]
		},
		"build:css": {
			"extensions": "scss",
			"patterns": [
				"src/scss"
			]
		},
		"dump": {
			"extensions": "js,css",
			"patterns": [
				"assets/js",
				"assets/css"
			]
		}
	},
	"lint-staged": {
		"*.php": "./vendor/bin/phpcs --standard=phpcs.ruleset.xml",
		"src/js/**/*.js": "wp-scripts lint-js",
		"src/scss/**/*.scss": "wp-scripts lint-style"
	},
	"engines": {
		"node": ">=22"
	},
	"volta": {
		"node": "22.22.0"
	}
}
